@model Repository_Data.Lesson
@{
    ViewBag.Title = "AddLesson";
}

<h2>AddLesson</h2>


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("AddLesson", "Subject", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <fieldset>

        <div class="editor-field">
            <input type="text" name="RowKey" />
        </div>
        <label>Title</label>
        <div class="editor-label">
            <input type="text" name="Title" />
        </div>

        <label>PlannedDate</label>
        <div class="editor-field">
            <input type="datetime-local" name="PlannedDate" />

        </div>
        <label>Description</label>
        <div class="editor-field">
            <input type="text" name="Description" />
        </div>
        <p>
            <input type="submit" value="AddLesson" />
        </p>
    </fieldset>
}
@Html.ActionLink("ListOfLessons", "GetLesson")