
@{
    ViewBag.Title = "EditLesson";
}

<h2>EditLesson</h2>

Description
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<form action="~/Subject/Edit2" method="post">
    <table class="show">
        <tr>

            <td>ID:</td>
            <td><input type="text" name="RowKey" value="@ViewBag.Lesson.RowKey" readonly /> </td>
        </tr>

        <tr>
            <td>Title:</td>
            <td><input type="text" name="Title" value="@ViewBag.Lesson.Title" /> </td>
        </tr>
        <tr>
            <td>PlannedDate:</td>
            <td><input type="datetime-local" name="PlannedDate" value="@ViewBag.Lesson.PlannedDate" /> </td>
        </tr>

        <tr>
            <td>Description:</td>
            <td><input type="text" name="Description" value="@ViewBag.Lesson.Description" /> </td>
        </tr>

        <tr>
            <td colspan="2"></td>
        </tr>
    </table>
    <input type="submit" value="Edit">


</form>



